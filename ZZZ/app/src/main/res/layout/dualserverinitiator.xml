<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.myapplicationbt.AppWidget.Container"
    android:layout_width="280dp"
    android:layout_height="120dp"
    android:background="#00FFFFFF"
    android:backgroundTint="#00FFFFFF"
    android:foregroundTint="#00FFFFFF"
    android:theme="@style/Theme.myapplicationbt.AppWidgetContainer">

    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.myapplicationbt.AppWidget.InnerView"
        android:layout_width="264dp"
        android:layout_height="104dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/appwidget_text"
        android:drawableEnd="@drawable/app_widget_background"
        android:drawableBottom="@drawable/app_widget_background"
        android:foreground="@drawable/beij"
        android:scrollbarThumbHorizontal="@drawable/app_widget_background"
        android:scrollbarThumbVertical="@drawable/app_widget_background"
        android:textColor="#00FFFFFF"
        android:textColorHighlight="#00FB0000"
        android:textColorHint="#00FFFFFF"
        android:textColorLink="#00FF0000"
        android:textCursorDrawable="@drawable/app_widget_background"
        android:textSize="8sp"
        android:textStyle="bold|italic"
        app:drawableBottomCompat="@drawable/app_widget_background" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:layout_alignEnd="@+id/appwidget_text"
        android:layout_alignBottom="@+id/appwidget_text"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="-7dp"
        android:text="官服"
        android:textAlignment="center"
        android:textColor="#D65814"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:layout_alignEnd="@+id/appwidget_text"
        android:layout_alignBottom="@+id/appwidget_text"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="-7dp"
        android:text="B服"
        android:textAlignment="center"
        android:textColor="#E68722"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/appwidget_text"
        android:layout_alignBottom="@+id/appwidget_text"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="26dp"
        android:background="#00FFFFFF"
        android:foreground="@drawable/ic_launcher"
        android:onClick="startOfficial" />

    <Button
        android:id="@+id/button2"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_alignEnd="@+id/appwidget_text"
        android:layout_alignBottom="@+id/appwidget_text"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="30dp"
        android:background="#00FFFFFF"
        android:foreground="@drawable/ic_launcher_bilibili"
        android:onClick="startBilibili" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="69dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/appwidget_text"
        android:layout_alignBottom="@+id/appwidget_text"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="15dp"
        android:text="点击图标直接切换" />

</RelativeLayout>